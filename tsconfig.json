{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ES5", "ES6", "ES7"],
    "paths": {
      "@settings/*": ["src/settings/*"],
      "@ui/*": ["src/ui/*"],
      "@api/*": ["src/api/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["**/*.ts"]
}